<Page x:Class="Gestion1.Vues.Menu.Vente.Vente"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestion1.Vues.Menu.Vente"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Height="860"
      Width="1540"
      Title="Vente"
      Background="White">

    <Grid>
        <Grid Height="Auto"
              Width="Auto"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Margin="100 60 0 0">
            <StackPanel>
                <TextBlock x:Name="TextBlockDetailsFacture"
                           Text="Détails de facture :"
                           FontSize="17"
                           FontFamily="Segoe UI Light"
                           Foreground="Gray"/>
                <TextBox x:Name="TextBoxNumeroFacture"
                         Height="35"
                         Width="160"
                         HorizontalAlignment="Left"
                         Margin="0 25 0 0"
                         FontSize="17"
                         materialDesign:HintAssist.Hint="Numéro de facture"/>
                <TextBox x:Name="RichTextBox"
                         Height="35"
                         Width="300"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Description"/>
                <DatePicker x:Name="DatePickerFacture"
                            Height="35"
                            Width="140"
                            HorizontalAlignment="Left"
                            FontSize="17"
                            Margin="0 25 0 0"
                            materialDesign:HintAssist.Hint="Date de facture"/>
            </StackPanel>
        </Grid>
        <Grid Height="Auto"
              Width="400"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Margin="0 60 150 0">
            <StackPanel>
                <TextBlock x:Name="TextBlockClient"
                           Text="Client :"
                           FontSize="17"
                           FontFamily="Segoe UI Light"
                           Foreground="Gray"/>
                <TextBox x:Name="TextBoxClientNom"
                         Height="35"
                         Width="160"
                         Margin="0 25 0 0"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         materialDesign:HintAssist.Hint="Nom"/>
                <TextBox x:Name="TextBoxClientPrenom"
                         Height="35"
                         Width="160"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Prénom"/>
                <TextBox x:Name="TextBoxClientSociété"
                         Height="35"
                         Width="160"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Société"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right">
                <TextBlock x:Name="TextBlockVide"
                           FontSize="17"
                           FontFamily="Segoe UI Light"
                           Foreground="Gray"/>
                <TextBox x:Name="TextBoxClientTelephone"
                         Height="35"
                         Width="160"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Téléphone"/>
                <TextBox x:Name="TextBoxClientEmail"
                         Height="35"
                         Width="200"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Email"/>
            </StackPanel>
        </Grid>
        <Grid Height="450"
              Width="700"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Left"
              Margin="100 0 0 100">
            <DataGrid x:Name="DataGridVente"
                      Height="450"
                      VerticalAlignment="Top"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Background="Transparent"
                      RowHeight="60"/>
        </Grid>
        <Grid Height="780"
              Width="530"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="0 60 10 0">
            <ComboBox x:Name="ComboBoxRechercheCategorie"
                      Height="40"
                      Width="200"
                      materialDesign:HintAssist.Hint="Catégorie"
                      FontSize="20"
                      FontFamily="Segoe UI light"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Margin="30 30 0 0">
                <ComboBoxItem>Nom</ComboBoxItem>
                <ComboBoxItem>Prenom</ComboBoxItem>
                <ComboBoxItem>Societe</ComboBoxItem>
                <ComboBoxItem>Telephone</ComboBoxItem>
                <ComboBoxItem>Email</ComboBoxItem>
            </ComboBox>
            <TextBox x:Name="TextBoxRecherche"
                     Height="40"
                     Width="200"
                     materialDesign:HintAssist.Hint="Rechercher"
                     FontSize="20"
                     FontFamily="Segoe UI light"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="0 30 30 0"
                     TextChanged="TextBoxRecherche_TextChanged"/>
            <DataGrid x:Name="DataGridClient"
                      Height="630"
                      Width="Auto"
                      VerticalAlignment="Top"
                      Margin="0 100 0 0"
                      FontSize="17"
                      FontFamily="Segoe UI light"
                      Background="Transparent"
                      SelectionChanged="DatagridClient_SelectionChanged"/>
            <TextBlock x:Name="TextBlockTotal"
                       Text=""
                       FontSize="20"
                       Foreground="Gray"
                       FontFamily="Segoe UI Light"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Page>