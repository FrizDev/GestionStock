<Page x:Class="Gestion1.Vues.Menu.Vente.Vente"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestion1.Vues.Menu.Vente"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Height="860"
      Width="1540"
      Title="Vente"
      Background="White">

    <Grid>
        <Grid Height="Auto"
              Width="Auto"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Margin="100 60 0 0">
            <StackPanel>
                <TextBlock x:Name="TextBlockDetailsFacture"
                           Text="Détails de facture :"
                           FontSize="20"
                           FontFamily="Segoe UI Light"
                           Foreground="Gray"/>
                <TextBox x:Name="TextBoxNumeroFacture"
                         Height="35"
                         Width="160"
                         HorizontalAlignment="Left"
                         Margin="0 25 0 0"
                         FontSize="17"
                         materialDesign:HintAssist.Hint="Numéro de facture"/>
                <TextBox x:Name="TextBoxDescription"
                         Height="35"
                         Width="300"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Description"/>
                <DatePicker x:Name="DatePickerFacture"
                            Height="35"
                            Width="140"
                            HorizontalAlignment="Left"
                            FontSize="17"
                            Margin="0 25 0 0"
                            materialDesign:HintAssist.Hint="Date de facture"/>
            </StackPanel>
        </Grid>
        <Grid Height="Auto"
              Width="400"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Margin="0 60 150 0">
            <StackPanel>
                <TextBlock x:Name="TextBlockClient"
                           Text="Client :"
                           FontSize="20"
                           FontFamily="Segoe UI Light"
                           Foreground="Gray"/>
                <TextBox x:Name="TextBoxClientNom"
                         Height="35"
                         Width="160"
                         Margin="0 25 0 0"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         materialDesign:HintAssist.Hint="Nom"/>
                <TextBox x:Name="TextBoxClientPrenom"
                         Height="35"
                         Width="160"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Prénom"/>
                <TextBox x:Name="TextBoxClientSociété"
                         Height="35"
                         Width="160"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Société"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right">
                <TextBlock x:Name="TextBlockVide"
                           FontSize="17"
                           FontFamily="Segoe UI Light"
                           Foreground="Gray"/>
                <TextBox x:Name="TextBoxClientTelephone"
                         Height="35"
                         Width="160"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Téléphone"/>
                <TextBox x:Name="TextBoxClientEmail"
                         Height="35"
                         Width="200"
                         HorizontalAlignment="Left"
                         FontSize="17"
                         Margin="0 25 0 0"
                         materialDesign:HintAssist.Hint="Email"/>
            </StackPanel>
        </Grid>
        <Grid Height="450"
              Width="800"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Left"
              Margin="100 0 0 50">
            <StackPanel Height="Auto"
                        Width="Auto"
                        HorizontalAlignment="Left">
                <TextBlock x:Name="TextBlockContenuCommande"
                       Text="Contenu de la commande :"
                       FontSize="20"
                       FontFamily="Segoe UI Light"
                       Foreground="Gray"/>
                <TextBlock x:Name="TextBlockContenuNomProduit"
                           Text="Produit :"
                           FontSize="17"
                           Foreground="#FF6B6B6B"
                           Margin="0 45 0 0"
                           Height="35"
                           Width="Auto"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"/>
                <TextBlock x:Name="TextBlockContenuCodeProduit"
                           Text="Code produit :"
                           FontSize="17"
                           Foreground="#FF6B6B6B"
                           Margin="0 25 0 0"
                           Height="Auto"
                           Width="Auto"
                           HorizontalAlignment="Left"/>
                <TextBlock x:Name="TextBlockContenuQuantite"
                           Text="Quantité :"
                           FontSize="17"
                           Foreground="#FF6B6B6B"
                           Margin="0 35 0 0"
                           Height="Auto"
                           Width="Auto"
                           HorizontalAlignment="Left"/>
                <TextBlock x:Name="TextBlockContenuPrixUnitaire"
                           Text="Prix unitaire :"
                           FontSize="17"
                           Foreground="#FF6B6B6B"
                           Margin="0 35 0 0"
                           Height="Auto"
                           Width="Auto"
                           HorizontalAlignment="Left"/>
                <Button x:Name="ButtonAjouterFacture"
                        Height="Auto"
                        Width="190"
                        HorizontalAlignment="Left"
                        Margin="0 25 0 0"
                        Content="Ajouter à la facture"
                        FontFamily="Segoe UI Light"
                        FontSize="20"
                        BorderBrush="{x:Null}"
                        Click="ButtonAjouterFacture_Click"/>
            </StackPanel>
            <StackPanel Height="Auto"
                        Width="Auto"
                        Margin="150,0,0,0"
                        HorizontalAlignment="Left">
                <TextBlock x:Name="TextBlockContenuCommande2"
                       Text=""
                       FontSize="20"
                       FontFamily="Segoe UI Light"
                       Foreground="Gray"/>
                <ComboBox x:Name="ComboBoxContenuNomProduit"
                          materialDesign:HintAssist.Hint="Produit"
                          FontSize="17"
                          Margin="0 35 0 0"
                          Height="Auto"
                          Width="Auto"
                          HorizontalAlignment="Left"
                          DropDownOpened="ComboBoxContenuNomProduit_OnDropDownOpened"/>
                <TextBox x:Name="TextBoxContenuCodeProduit"
                         materialDesign:HintAssist.Hint="Code produit"
                         FontSize="17"
                         Margin="0 30 0 0"
                         Height="Auto"
                         Width="Auto"
                         HorizontalAlignment="Left"
                         IsReadOnly="True"/>
                <TextBox x:Name="TextBoxContenuQuantite"
                         materialDesign:HintAssist.Hint="Quantité"
                         FontSize="17"
                         Margin="0 25 0 0"
                         Height="Auto"
                         Width="Auto"
                         HorizontalAlignment="Left"/>
                <TextBox x:Name="TextBoxContenuPrixUnitaire"
                         materialDesign:HintAssist.Hint="Prix unitaire"
                         FontSize="17"
                         Margin="0 25 0 0"
                         Height="Auto"
                         Width="Auto"
                         HorizontalAlignment="Left"/>
            </StackPanel>
            <DataGrid x:Name="DataGridFacture"
                      Height="450"
                      Width="500"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Background="Transparent"/>
        </Grid>
        <Grid Height="780"
              Width="530"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="0 60 10 0">
            <ComboBox x:Name="ComboBoxRechercheCategorie"
                      Height="40"
                      Width="200"
                      materialDesign:HintAssist.Hint="Catégorie"
                      FontSize="20"
                      FontFamily="Segoe UI light"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Margin="30 30 0 0">
                <ComboBoxItem>Nom</ComboBoxItem>
                <ComboBoxItem>Prenom</ComboBoxItem>
                <ComboBoxItem>Societe</ComboBoxItem>
                <ComboBoxItem>Telephone</ComboBoxItem>
                <ComboBoxItem>Email</ComboBoxItem>
            </ComboBox>
            <TextBox x:Name="TextBoxRecherche"
                     Height="40"
                     Width="200"
                     materialDesign:HintAssist.Hint="Rechercher"
                     FontSize="20"
                     FontFamily="Segoe UI light"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="0 30 30 0"
                     TextChanged="TextBoxRecherche_TextChanged"/>
            <DataGrid x:Name="DataGridClient"
                      Height="630"
                      Width="Auto"
                      VerticalAlignment="Top"
                      Margin="0 100 0 0"
                      FontSize="17"
                      FontFamily="Segoe UI light"
                      Background="Transparent"
                      SelectionChanged="DataGridClient_SelectionChanged"/>
            <TextBlock x:Name="TextBlockTotal"
                       Text=""
                       FontSize="20"
                       Foreground="Gray"
                       FontFamily="Segoe UI Light"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Page>